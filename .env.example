# Genesys Cloud AudioHook Event Collector Configuration
# Copy this to .env and customize for your environment

# ====================== REQUIRED SETTINGS ======================
# Genesys Cloud OAuth2 Client Credentials
GENESYS_ENV=usw2.pure.cloud
GENESYS_CLIENT_ID=your-client-id-here
GENESYS_CLIENT_SECRET=your-client-secret-here

# ====================== OUTPUT SETTINGS ======================
# Where to write AudioHook events (JSONL format)
OUTPUT_FILE=./audiohook_events.jsonl

# File rotation settings
MAX_FILE_SIZE=10485760  # 10MB
BACKUP_COUNT=5

# Also log to console
CONSOLE_OUTPUT=true

# ====================== OPTIONAL: ELASTICSEARCH ======================
# Leave blank to disable Elasticsearch integration
ELASTIC_URL=
ELASTIC_AUTH=
ELASTIC_INDEX=genesys-audiohook
BULK_SIZE=50

# ====================== TOPICS CONFIGURATION ======================
# Custom topics file (JSON format) - optional
TOPICS_FILE=./topics.json

# ====================== HTTP STATUS SERVER ======================
HTTP_HOST=0.0.0.0
HTTP_PORT=8077

# ====================== CONNECTION SETTINGS ======================
RECONNECT_DELAY=5.0
MAX_RECONNECT_DELAY=60.0